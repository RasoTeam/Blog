<%= form_for @post do |f| %>
  <div class="field">
    <%= f.label :title %> <br/>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %> <br/>
    <%= f.text_area :content %>
  </div>
  <div id="post_category">
    <%= f.select :category_id, @cat_zip, :selected => @post.category.id unless @post.category.nil? %>
    <%= f.select :category_id, @cat_zip unless !@post.category.nil? %>
  </div>
  <div class="actions" id="post_submit">
    <%= f.submit %>
  </div>
<% end %>
