<h1><%= @post.title %></h1>
<p><%= @post.content %></p>
<p><%= link_to "Back to " + @category.name,  category_path(@category)%>
<p><%= time_ago_in_words(@post.created_at) %> </p>
<% if signed_in? %>
  <p><%= @post.user.name %></p>
  <p><%= button_to "delete", @post, :method=>:delete, :class=>:destroy, :confirm => 'Are you sure?' %>
<% end %>

<%= render 'posts/comments' %>
