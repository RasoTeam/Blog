<div id="categories">
  <div class="category" onclick="window.location = '<%= url_for root_path %>'">
    <span class="ribbon-content">
      Home
    </span>
  </div>
  <% get_categories.each do |c| %>
    <div class="category" onclick="window.location = '<%= url_for category_path(c) %>'" >
      <span class="ribbon-content">
        <%= c.name %>
      </span>
	 </div>
  <% end %>

  <% if signed_in? %>
    <div class="welcome">
      Welcome <%= current_user.name %>
    </div>
        
    <div class="category" onclick="window.location = '<%= url_for current_user %>'">
      <span class="ribbon-content">
        Profile
      </span>
    </div>
    <div class="category" onclick="window.location = '<%=  %>'">
      <span class="ribbon-content">
        Settings
      </span>
    </div>
    <div class="category" onclick="window.location = 
                                   '<%= url_for new_category_post_path(get_categories[0]) %>'">
      <span class="ribbon-content">
        New Post
      </span>
    </div>
    <div class="category" onclick="window.location = '<%= categories_path %>'">
      <span class="ribbon-content">
        Categories
      </span>
    </div>
    <div class="category" onclick="window.location = '<%= url_for signout_path :method => :destroy  %>'">
      <span class="ribbon-content">
        Sign out
      </span>
    </div>
  <% end %>
</div>
