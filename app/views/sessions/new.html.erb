<h1>Sign in</h1>
<div id="login_form">

<%= form_for(:session, :url => sessions_path) do |f| %>

  <%= f.label :email %>
  <%= f.text_field :email, :class => 'text_field'%>

  <%= f.label :password %>
  <%= f.password_field :password, :class => 'text_field' %>
  <%= f.submit "Sign in", id: 'login_button'%>
</div>

<% end %>
